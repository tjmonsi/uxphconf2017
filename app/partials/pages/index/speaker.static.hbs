<section id="speakers" class="uxph-blue-bg">
  <div class="uxph-small-box uxph-blue-box uxph-bottom-right"></div>
  <div class="uxph-small-box uxph-red-box uxph-top-right"></div>
  <div class="uxph-small-box uxph-blue-box uxph-top-left"></div>
  <div class="uxph-small-box uxph-red-box uxph-bottom-left"></div>

  <h1 class="uxph-section-title-2">
    Speakers
  </h1>

  <div class="uxph-speaker-section">
    {{#each data.speakers}}

    <div class="uxph-speaker-wrapper {{#wrapper @index 2 0}}uxph-speaker-wrapper-tablet {{#wrapper @index 4 2}}uxph-speaker-wrapper-desktop{{/wrapper}}{{/wrapper}}">
    </div>

    {{#mainSpeakerEnd @index 2}}
    <div class="uxph-speaker-wrapper uxph-speaker-wrapper-tablet uxph-speaker-wrapper-desktop">
    </div>
    {{/mainSpeakerEnd}}

    {{#if name}}
    <div class="uxph-speaker-container">
      <a href="/speakers/{{link}}/" style="color: inherit; text-decoration: none">
      <div class="uxph-speaker-avatar" style="background: url('{{avatar}}') no-repeat center center/cover" >
      </div>
      </a>
      <div class="uxph-speaker-text-container">

        <div class="uxph-speaker-name-short-bio">
          <div class="uxph-speaker-name">
            <a href="/speakers/{{link}}/" style="color: inherit; text-decoration: none">
            {{name}}
            </a>
          </div>

          <div class="uxph-speaker-short-bio">
            {{shortBio}}
          </div>
        </div>
        <div class="uxph-speaker-divider-container">
          <div class="uxph-speaker-divider-flex">
          </div>
          <div class="uxph-small-divider-2">
          </div>
          <div class="uxph-speaker-divider-flex">
          </div>
        </div>
        <div class="uxph-speaker-talk-topic">
          {{talkTopic}}
        </div>
      </div>
      <div class="uxph-speaker-full-bio-button">
        <a href="/speakers/{{link}}/">
          Full bio
        </a>
      </div>
    </div>
    {{else}}
    <div class="uxph-speaker-spacer">
    </div>
    {{/if}}
    {{/each}}
  </div>

</section>
